<?xml version="1.0" encoding="UTF-8"?>
<beans
  xmlns="http://www.springframework.org/schema/beans"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns:util="http://www.springframework.org/schema/util"
  xmlns:p="http://www.springframework.org/schema/p"
  xsi:schemaLocation="
    http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
    http://www.springframework.org/schema/util
    http://www.springframework.org/schema/util/spring-util-3.0.xsd
  "
>
  <bean
    id="shapeLogWriter"
    class="com.revolsys.io.shp.ShapeDirectoryWriter"
    lazy-init="true"
    p:directory="."
    p:useZeroForNull="false"
    p:useNamespaceAsSubDirectory="false"
  />

  <bean
    id="shapeLog"
    class="com.revolsys.gis.data.model.DataObjectLog"
    factory-method="dataObjectLog"
    p:writer-ref="shapeLogWriter" />
</beans>